h1 AngularAddresses
h2 Search
input(placeholder="Search", ng-model="query")
h2 Addresses
//.btn.btn-primary(data-toggle="modal", data-target="#modal") New Address
a.btn.btn-primary(href="#/mycontacts/new") New Address
.gallery
  .person(ng-repeat="(id, person) in main.people | objToArr | orderBy:'name' | filter:query")
    a(href="/#/mycontacts/{{person._id}}")
      img(ng-src="{{person.photo}}")
div(ng-include="'views/modal.html'")



